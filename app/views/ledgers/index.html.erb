<h1>Ledger</h1>

<div class="well">
  <%= link_to "New Ledger", new_ledger_path, remote: true, class: "btn btn-primary" %>
</div>
<div class="ledger-summary">
  <%= render 'summary' %>
 </div>


<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th>Amount</th>
      <th>Cleared</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 <tbody class="ledger-index">
      <%= render "index" %>
    </tbody>
</table>
</div>
<br>
<div id="ledger-modal" class="modal fade">
<div class="modal-dialog">
<div id="inner-ledger-modal" class="modal-content"></div>
</div>
</div>
