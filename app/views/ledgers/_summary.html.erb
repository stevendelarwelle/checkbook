<div class="row">
  <div class="col-md-4">
    <div class="panel panel-success">
      <div class="panel-heading">
      <h3 class="text-center panel-title">Actual Cash:</h3>
      </div>
      <div class="panel-body">
        <h3 class="text-center"> <%= number_to_currency(@ledgerscash) %></h3>
         </div>
    </div>
  </div>
  
  
  <div class="col-md-4">
    <div class="panel panel-warning">
      <div class="panel-heading">
      <h3 class="text-center panel-title">Cleared Bank:</h3>
      </div>
      <div class="panel-body">
        <h3 class="text-center"> <%= number_to_currency(@ledgersbank) %></h3>
         </div>
    </div>
  </div>
    
   
  <div class="col-md-4">
    <div class="panel panel-danger">
      <div class="panel-heading">
      <h3 class="text-center panel-title">Difference:</h3>
      </div>
      <div class="panel-body">
        <h3 class="text-center"><%= number_to_currency(@ledgersdiff) %></h3>
         </div>
    </div>
  </div>
</div>
  
  
  
